{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "moduleResolution": "node",
    "rootDir": "./src",
    "noImplicitAny": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es5",
      "es2015.core",
      "es2015.promise",
      "es2015.iterable",
      "es2015.proxy"
    ]
  },
  "include": ["src/**/*", "test/**/*"],
  "exclude": ["node_modules"]
}
